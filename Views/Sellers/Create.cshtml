@model CRUD.Models.ViewModels.SellerFormViewModel
@{
    ViewData["Title"] = "Cadastrar Vendedor";
}

<h1>Cadastro</h1>

<h4>Vendedor</h4>

<div class="row">
    <div class="col-md-5">
        <form asp-action="Create">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Seller.Name" class="control-label">Nome</label>
                <input asp-for="Seller.Name" class="form-control" />
                <span asp-validation-for="Seller.Name" class="text-danger"></span>
            </div>
            <br>
            <div class="form-group">
                <label asp-for="Seller.SurName" class="control-label">Sobrenome</label>
                <input asp-for="Seller.SurName" class="form-control" />
                <span asp-validation-for="Seller.SurName" class="text-danger"></span>
            </div>
            <br>
            <div class="form-group">
                <label asp-for="Seller.Email" class="control-label">Email</label>
                <input asp-for="Seller.Email" class="form-control" />
                <span asp-validation-for="Seller.Email" class="text-danger"></span>
            </div>
            <br>
            <div class="form-group">
                <label asp-for="Seller.BirthDate" class="control-label">Data de Aniversário</label>
                <input asp-for="Seller.BirthDate" class="form-control" />
                <span asp-validation-for="Seller.BirthDate" class="text-danger"></span>
            </div>
            <br>
            <div class="form-group">
                <label asp-for="Seller.BaseSalary" class="control-label">Salário</label>
                <input asp-for="Seller.BaseSalary" class="form-control" />
                <span asp-validation-for="Seller.BaseSalary" class="text-danger"></span>
            </div>
            <br>
            <div class="form-group">
                <label asp-for="Seller.DepartmentId" class="control-label">Departamento</label>
                <select asp-for="Seller.DepartmentId" asp-items="@(new SelectList(Model.Departments, "Id", "Name"))" class="form-control"></select>
                <span asp-validation-for="Seller.DepartmentId" class="text-danger"></span>
            </div>
            <br>
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-primary" />
            </div>
            <div>
                <a asp-action="Index">Voltar à lista</a>
            </div>
        </form>
    </div>


    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
